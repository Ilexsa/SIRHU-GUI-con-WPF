<UserControl x:Class="SIRHU.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SIRHU.View" xmlns:customControls="clr-namespace:SIRHU.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewModel="clr-namespace:SIRHU.ViewModel"
             xmlns:mapGoogle="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d" 
             d:DesignHeight="806" d:DesignWidth="1023">

    <UserControl.DataContext>
        <viewModel:WorkersViewModel/>
    </UserControl.DataContext>

    <Border CornerRadius="10"
                BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

            
            <!--Content Section-->
            <Grid>
                <TabControl Style="{StaticResource MaterialDesignTabControl}"
                            >
                    <TabItem Header="Datos iniciales" 
                             Style="{StaticResource MaterialDesignTabItem}"
                             FontSize="10"
                             FontFamily="Montserrat"
                             
                             >
                        <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Grid Margin="0,3,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>

                                </Grid.RowDefinitions>
                                <!--Boton con su icono-->
                                <materialDesign:PackIcon Kind="CardAccountDetails" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="0"/>
                                <!--<TextBox x:Name="txtCedula"
                                         Margin="30,11,320,20"
                                         Text="{Binding Cedula, UpdateSourceTrigger=PropertyChanged}"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         GotFocus="txtCedula_GotFocus"
                                         LostFocus="txtCedula_LostFocus"
                                         Grid.Row="0"
                                         Foreground="{StaticResource color3}"
                                         >
                                </TextBox>-->
                                <customControls:CustomTextBox Grid.Row="0" Margin="10 " />
                                <CheckBox x:Name="chkPasaporte"
                                          Margin="196,11,159,20"
                                          Content="¿Pasaporte?"
                                          Foreground="{StaticResource color3}"
                                          Background="{StaticResource color1}"
                                          FontFamily="Montserrat"
                                          FontSize="12">
                                    
                                </CheckBox>
                                <!--Boton con icono2-->
                                <materialDesign:PackIcon Kind="CardAccountDetails" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="1"/>
                                <TextBox x:Name="txtNombre" 
                                         Margin="30,11,190,20"
                                         Text="{Binding Nombres, UpdateSourceTrigger=PropertyChanged}"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         GotFocus="txtNombre_GotFocus"
                                         LostFocus="txtNombre_LostFocus"
                                         Grid.Row="1"
                                         Foreground="{StaticResource color3}"
                                         >
                                </TextBox>
                                <!--Fecha y Edad-->
                                <DatePicker Grid.Row="2"
                                            FontFamily="Montserrat"
                                            FontSize="12"
                                            Foreground="{StaticResource color3}"
                                            Height="23"
                                            Margin="30,11,320,20"
                                            
                                            >
                                </DatePicker>

                                <materialDesign:PackIcon Kind="CardAccountDetails" Width="20" Margin="201 14" Foreground="{StaticResource color3}" Grid.Row="2"/>
                                <TextBox x:Name="txtEdad"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="225,11,140,20"
                                         Text="Edad"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Grid.Row="2"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}"
                                         >
                                </TextBox>
                                <!--Celular y Combo nacionalidades-->
                                <materialDesign:PackIcon Kind="Earth" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="3"/>
                                <ComboBox Grid.Row="3"
                                          Margin="30,11,320,20"
                                          DataContext="Nacionalidad"
                                          
                                          >
                                </ComboBox>

                                <materialDesign:PackIcon Kind="Cellphone" Width="20" Margin="201 14" Foreground="{StaticResource color3}" Grid.Row="3"/>
                                <TextBox x:Name="txtCelular"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="225,11,140,20"
                                         Text="{Binding NumCelula, UpdateSourceTrigger=PropertyChanged}"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Grid.Row="3"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}"
                                         >
                                </TextBox>
                                <!--telefono-->
                                <materialDesign:PackIcon Kind="Phone" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="4"/>
                                <TextBox x:Name="txtTelefono"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 190 20"
                                         Grid.Row="4"
                                         Text="{Binding TelefonoConvencional, UpdateSourceTrigger=PropertyChanged}"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                    
                                </TextBox>
                                <!--correos en dos rowsdiferentes-->
                                <materialDesign:PackIcon Kind="Mailbox" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="5"/>
                                <TextBox x:Name="txtCorreo1"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 190 20"
                                         Grid.Row="5"
                                         Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">

                                </TextBox>
                                <materialDesign:PackIcon Kind="Mailbox" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="6"/>
                                <TextBox x:Name="txtCorreo2"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 190 20"
                                         Grid.Row="6"
                                         Text="Correo alterno"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                </TextBox>
                                <!--Direccion y referencias-->
                                <materialDesign:PackIcon Kind="Home" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="7"/>
                                <TextBox x:Name="txtDireccion"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 190 20"
                                         Grid.Row="7"
                                         Text="Dirección domiciliaria"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                </TextBox>
                                <materialDesign:PackIcon Kind="Home" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="8"/>
                                <TextBox x:Name="txtReferencias"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 190 20"
                                         Grid.Row="8"
                                         Text="Referencias"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                </TextBox>
                                <!--combos estado civil y contrato 1 row-->
                                <materialDesign:PackIcon Kind="HumanMaleFemale" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="9"/>
                                <ComboBox Grid.Row="9"
                                          Margin="30,11,320,20"
                                          DataContext="Nacionalidad">
                                </ComboBox>
                                <materialDesign:PackIcon Kind="FileSign" Width="20" Margin="201 14" Foreground="{StaticResource color3}" Grid.Row="9"/>
                                <ComboBox Grid.Row="9"
                                          Margin="225,11,140,20"
                                          DataContext="Nacionalidad">
                                </ComboBox>
                                <!--Codigo sectorial y tipo de contrato-->
                                <materialDesign:PackIcon Kind="Sign" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="10"/>
                                <TextBox x:Name="txtSectorial"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="30 11 320 20"
                                         Grid.Row="10"
                                         Text="Codigo Sectorial"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                </TextBox>

                                <materialDesign:PackIcon Kind="Money" Width="20" Margin="201 14" Foreground="{StaticResource color3}" Grid.Row="10"/>
                                <TextBox x:Name="txtSueldo"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         Margin="225,11,140,20"
                                         Grid.Row="10"
                                         Text="Sueldo"
                                         Height="23"
                                         FontFamily="Montserrat"
                                         FontSize="12"
                                         Foreground="{StaticResource color3}"
                                         CaretBrush="{StaticResource color1}">
                                </TextBox>

                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    <RowDefinition Height="53.73"/>
                                    
                                </Grid.RowDefinitions>
                                <Border CornerRadius="12"
                                        BorderThickness="7"
                                        BorderBrush="{StaticResource color1}"
                                        Margin="20 25">
                                    
                                <mapGoogle:GMapControl x:Name="mapView" Loaded="mapView_Loaded"
                                                       Grid.Row="0"
                                                       >
                                </mapGoogle:GMapControl>
                                    
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    </TabItem>
                    <TabItem Header="--" Style="{StaticResource MaterialDesignTabItem}"
                             FontFamily="montserrat">
                    </TabItem>
                </TabControl>
            </Grid>
            <!--<StackPanel Grid.Column="0">

            </StackPanel>-->
    </Border>
</UserControl>
