<UserControl x:Class="SIRHU.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SIRHU.View" xmlns:customControls="clr-namespace:SIRHU.CustomControls"
             xmlns:properties="clr-namespace:SIRHU.CustomProperties"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewModel="clr-namespace:SIRHU.ViewModel"
             xmlns:mapGoogle="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="990">
    <UserControl.DataContext>
        <viewModel:WorkersViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="textBoxStylesNuevo" TargetType="TextBox">
            <Setter Property="Background" Value="#1E5887"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource color3}"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="FontFamily" Value="montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="330"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="properties:TextBoxProperties.Icon" Value=""/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="txtBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            SnapsToDevicePixels="True">
                            <Grid Margin="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="-0 2"/>
                                <Label x:Name="WaterMarkerLabel"
                                   Content="{TemplateBinding Tag}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   Visibility="Collapsed"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   Foreground="{TemplateBinding Foreground}"
                                   Padding="{TemplateBinding Padding}">
                                </Label>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="txtBorder" Value="#a87b05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" TargetName="txtBorder" Value="#a87b05"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility"
                                    TargetName="WaterMarkerLabel"
                                    Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border CornerRadius="10"
                BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource MaterialDesignShadow}" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>


        <!--Content Section-->
        <Grid>
            <TabControl Style="{StaticResource MaterialDesignTabControl}"
                            >
                <TabItem Header="Datos iniciales" 
                             Style="{StaticResource MaterialDesignTabItem}"
                             FontSize="10"
                             FontFamily="Montserrat"
                             Margin="10"
                             >
                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Grid Margin="0,3,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="125"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="60"/>

                                </Grid.RowDefinitions>
                                <!--Boton con su icono-->
                                <!--<materialDesign:PackIcon Kind="CardAccountDetails" Width="20" Margin="10 14" Foreground="{StaticResource color3}" Grid.Row="0"/>-->
                                <TextBox x:Name="txtNombres"
                                         Tag="Nombres"
                                         properties:TextBoxProperties.Icon="account"
                                         Text="{Binding Nombres, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         Style="{DynamicResource textBoxStylesNuevo}"
                                         Grid.Row="0"
                                         Margin=" 10 5 0 0"
                                         Width="330"
                                         >
                                </TextBox>
                                <materialDesign:PackIcon Kind="Account" Margin="315 13 0 0" Foreground="white"/>
                                <TextBox x:Name="txtApellidos"
                                         Tag="Apellidos"
                                         properties:TextBoxProperties.Icon="account"
                                         Text=""
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         Style="{DynamicResource textBoxStylesNuevo}"
                                         Grid.Row="0"
                                         Margin=" 10 45 0 0"
                                         Width="330"
                                         >
                                </TextBox>
                                <materialDesign:PackIcon Kind="Account" Margin="315 53 0 0" Foreground="white"/>
                                <TextBox x:Name="txtCedula" Tag="Cedula" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="0" HorizontalAlignment="Left"
                                         VerticalAlignment="Top" Width="330" Margin="10 85 0 0" properties:TextBoxProperties.Icon="cardaccountdetails"/>
                                <materialDesign:PackIcon Kind="Account" Margin="315 93 0 0" Foreground="white"/>

                                <StackPanel Grid.Row="0" Grid.Column="0"
                                            Margin="350 , 3 , 0 , 0">
                                    <Border BorderBrush="{StaticResource color3}"
                                        BorderThickness="3" Height="120"
                                            CornerRadius="30"
                                            Width="125">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Images/Messi.jpg"/>
                                        </Border.Background>
                                        <Button x:Name="btnUploadImage"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Background="#1E5887"
                                            Content="Subir Foto"
                                            Foreground="White"
                                            Grid.Row="0"
                                            FontSize="10"
                                            Width="90"
                                            BorderBrush="{StaticResource color3}"
                                            VerticalAlignment="Center"
                                            Margin="0 0 0 0"
                                            BorderThickness="1">
                                        </Button>
                                    </Border>
                                </StackPanel>
                                <DatePicker Grid.Row="1"
                                            FontFamily="Montserrat"
                                            FontSize="12"
                                            Foreground="{StaticResource color1}"
                                            Height="22"
                                            Width="190"
                                            Margin="0,0,270,0"
                                            BorderBrush="{StaticResource color4}"
                                            >

                                </DatePicker>
                                <TextBox x:Name="txtEdad" Tag="Edad" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="1"
                                         Width="230" Margin="240,0 ,0,0" IsEnabled="False"/>
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="1"/>
                                <ComboBox x:Name="cmbEstadoCivil"
                                          Grid.Row="2"
                                          FontFamily="montserrat"
                                          FontSize="12"
                                          Height="23"
                                          Width="190"
                                          Margin="0 5 270 0 "
                                          BorderBrush="{StaticResource color4}" VerticalAlignment="Top"
                                          KeyDown="cmbEstadoCivil_KeyDown"
                                          >

                                </ComboBox>

                                <TextBox x:Name="txtCelular" Tag="Celular" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="2"
                                         Width="230" Margin="240,0 ,0, 0" properties:TextBoxProperties.Icon="cellphone"/>
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="2"/>

                                <ComboBox x:Name="cmbNacionalidad"
                                          Grid.Row="3"
                                          FontFamily="montserrat"
                                          FontSize="12"
                                          Height="23"
                                          Width="190"
                                          Margin="0 5 270 0 "
                                          BorderBrush="{StaticResource color4}" VerticalAlignment="Top"
                                          KeyDown="cmbNacionalidad_KeyDown">
                                </ComboBox>
                                <TextBox x:Name="txtTelefono" Tag="Telefono" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="3"
                                         Width="230" Margin="240,0,0,0" />
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="3"/>

                                <TextBox x:Name="txtCorreo1" Tag="Correo Principal" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="4"
                                Width="470" Margin="00,0,0,0" properties:TextBoxProperties.Icon="phone" />
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="4"/>

                                <TextBox x:Name="txtCorreo2" Tag="Correo Alterno" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="5"
                                Width="470" Margin="0,0,0,0" properties:TextBoxProperties.Icon="phone"/>
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="5"/>

                                <ComboBox Grid.Row="6"
                                          FontFamily="montserrat"
                                          FontSize="12"
                                          Height="23"
                                          Width="190"
                                          Margin="0 5 270 0 "
                                          BorderBrush="{StaticResource color4}" VerticalAlignment="Top">

                                </ComboBox>

                                <TextBox x:Name="txtDireccion" Tag="Direccion" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="6"
                                         Width="230" Margin="240,0 ,0,0" />
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="6"/>

                                <TextBox x:Name="txtReferencias" Tag="Referencias" Style="{DynamicResource textBoxStylesNuevo}" Grid.Row="7"
 Width="470" Margin="0,0,0,0" properties:TextBoxProperties.Icon="phone" Height="95" TextWrapping="Wrap"
                                         Padding="10 10"/>
                                <materialDesign:PackIcon Kind="Account" Margin="451 12 0 0" Foreground="white" Grid.Row="7"/>
                            </Grid>
                            <StackPanel  Grid.Row="8" Orientation="Horizontal">
                                <Button Width="40" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                <Button Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                <Button Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                <Button Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="--" Style="{StaticResource MaterialDesignTabItem}"
                             FontFamily="montserrat">
                </TabItem>
            </TabControl>
        </Grid>
        <!--<StackPanel Grid.Column="0">

            </StackPanel>-->
    </Border>
</UserControl>
